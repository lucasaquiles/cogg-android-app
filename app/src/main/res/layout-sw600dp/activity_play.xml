                <br.com.lucasaquiles.cogg.view.RoundedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/template"
                    android:id="@+id/imageViewBase"
                    android:layout_weight="5"


                    android:layout_centerHorizontal="true" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="300dp"  android:layout_gravity="right" android:layout_marginLeft="35dp"
                android:layout_height="300dp" android:background="@drawable/circle"
                android:gravity =  "center"
                android:orientation="vertical"
                >


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"  android:layout_gravity="center_horizontal">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/head_1_ic_opened"
                    android:id="@+id/imageViewHead"

                    android:layout_gravity="center_horizontal|center_vertical"
                     />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eye_3_ic_opened"
                    android:id="@+id/imageViewEye"
                    android:layout_weight="5"
                    android:layout_marginTop="88dp"

                    android:layout_gravity="top|center"
                   />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nose_1_ic_opened"
            android:id="@+id/imageViewNose"
            android:layout_weight="5"
            android:layout_marginTop="2dp"

            android:layout_gravity="center"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eyebrow_1_ic_opened"
                android:id="@+id/imageViewEyewbrow"
                android:layout_weight="5"
                android:layout_marginTop="70dp"

                android:layout_gravity="top|center_horizontal"
                />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mouth_1_ic_opened"
            android:id="@+id/imageViewMouth"

            android:layout_weight="5"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="250dp" android:layout_gravity="left" android:layout_marginRight="35dp"
                android:layout_height="250dp" android:background="@drawable/circle" android:padding="5dp">

                <!--<TextView-->

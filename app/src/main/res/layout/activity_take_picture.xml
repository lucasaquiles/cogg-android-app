<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >

    <fragment
        android:id="@+id/camera_fragment"
        android:name="br.com.lucasaquiles.cogg.view.CameraFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <br.com.lucasaquiles.cogg.utils.CameraPreview android:id="@+id/surfaceView1" android:layout_width="wrap_content" android:layout_height="wrap_content">
    </br.com.lucasaquiles.cogg.utils.CameraPreview>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true" android:layout_gravity="center"
        android:padding="10dp" android:background="@drawable/surface_image_background">
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="bottom" android:gravity="center_horizontal" >
        <Button android:text="Tirar foto" android:id="@+id/button1"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/btn_take_pic"></Button>
        <Button android:text="Usar essa foto" android:id="@+id/button2"  android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
</FrameLayout>
